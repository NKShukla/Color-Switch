<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GameOverController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="500.0" pickOnBounds="true">
         <image>
            <Image url="@Images/bg.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="homeImage" fitHeight="85.0" fitWidth="85.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#backToHome" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/home.png" />
         </image>
      </ImageView>
      <ImageView fx:id="restartImage" fitHeight="144.0" fitWidth="132.0" layoutX="99.0" layoutY="184.0" onMouseClicked="#newGame" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/restart.png" />
         </image>
      </ImageView>
      <ImageView fx:id="reviveImage" fitHeight="144.0" fitWidth="132.0" layoutX="264.0" layoutY="184.0" onMouseClicked="#revive" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/revive.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
