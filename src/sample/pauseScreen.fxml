<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GameScreenController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="500.0" pickOnBounds="true">
         <image>
            <Image url="@Images/bg.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="homeImage" fitHeight="72.0" fitWidth="85.0" layoutX="20.0" layoutY="14.0" onMouseClicked="#backToHome" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/home.png" />
         </image>
      </ImageView>
      <ImageView fx:id="playImage" fitHeight="167.0" fitWidth="153.0" layoutX="60.0" layoutY="157.0" onMouseClicked="#playGame" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/play.png" />
         </image>
      </ImageView>
      <ImageView fx:id="saveImage" fitHeight="167.0" fitWidth="153.0" layoutX="265.0" layoutY="157.0" onMouseClicked="#saveGame" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/save.png" />
         </image>
      </ImageView>
      <Label fx:id="playLabel" layoutX="75.0" layoutY="310.0" text="PLAY">
         <font>
            <Font name="Gabriola" size="49.0" />
         </font>
      </Label>
      <Label fx:id="saveLabel" layoutX="275.0" layoutY="310.0" text="SAVE">
         <font>
            <Font name="Gabriola" size="49.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
